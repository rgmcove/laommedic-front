.funcionarios
  background-color white
  background-size cover
  width 100%
  height auto
  font-family fuente
  border 1px solid black
  text-align justify

.fondofunc
  border 1px solid #0D47A1
  box-shadow 2px 3px 30px rgba(0,0,0,0.5)
  width 100%
  padding 10px

.guardarfunc
  background-color #0D47A1
  font-family fuente
  color white
  &:hover
    color #23527c

.cancelarfunc
  background-color #B71C1C
  font-family fuente
  color white

.actualizafunc
  background-color #0D47A1
  font-family fuente
  color white
  &:hover
    color #23527c

@media screen and (max-width 1920px)
  .funcionarios
    height auto

@media screen and (max-height 1360px)
  .funcionarios
    margin-bottom 19em
