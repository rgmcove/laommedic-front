.pertratante
  background-color white
  background-size cover
  height auto
  width 100%
  font-family fuente
  border 1px solid black
  text-align justify

.fondotrata
  border 1px solid #0D47A1
  margin-bottom 78px
  box-shadow 2px 3px 30px rgba(0,0,0,0.5)
  width 100%
  padding 10px

.guardartrata
  background-color #0D47A1
  font-family fuente
  color white
  &:hover
    color #23527c

.cancelartrata
  background-color #B71C1C
  font-family fuente
  color white

@media screen and (max-height 1360px)
  .pertratante
    margin-bottom 16em

@media screen and (max-width 1920px)
  .fondotrata
    margin-top 12em
    margin-bottom 17.2em

  .pertratante
    height auto
    position relative
    margin-bottom 32em
