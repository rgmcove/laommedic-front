.passrecovery
  background-color #166ba2
  height 28em
  padding-top 3.6em
  &-logo
    text-align center
    padding-top 1em
  &-logoImg
    width 100%
    border solid 4px #f9f9f9
    border-radius 50%
    height 15em
    width 15em
  &-icons
    // padding 1em 1.5em 1em 0
    display inline-block

.passrecoveryForm
  text-align center
  padding-top 7em
  padding-bottom 5em
  &-form
    max-width 35em
    display inline-block
    padding 3em
    border-radius: 0.5em
    border 1px solid #0D47A1
    margin-bottom 78px
    border 1px solid #0d47a1
    box-shadow 2px 3px 30px rgba(0,0,0,0.5)


  &-title
    margin-bottom: 1em

.passrecoveryForm-title
  color #0D47A1
  font-family fuente

/**.passrecovery-containerIcon
  display inline-block **/

@media (max-width 516px)
  .passrecoveryForm
    width 80%
    margin-left 10%
    margin-right 10%

@media screen and (max-width: 1001px)
  .passrecovery
    &-content
      text-align center
    &-icons
      max-width 55px
      margin-right 0.5em
      display inline-block
    &-containerIcon
      text-align center
      display inline-block

@media screen and (max-width 1366px)
  .passrecoveryForm
    height 35.9em
